# TiTiler Server Configuration
TILER_HOST=0.0.0.0
TILER_PORT=8001
WORKERS=1
DEBUG=false

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=*

# Cache Configuration
# Using in-memory caching (Redis removed in favor of Cloudflare caching)
CACHE_TYPE=memory
CACHE_TTL=86400
CACHE_NAMESPACE=salty-tiler


# GDAL Performance Tuning
GDAL_DISABLE_READDIR_ON_OPEN=EMPTY_DIR
GDAL_CACHEMAX=512
CPL_VSIL_CURL_CACHE_SIZE=200000000
VSI_CACHE=TRUE
VSI_CACHE_SIZE=5000000
GDAL_HTTP_MERGE_CONSECUTIVE_RANGES=YES
GDAL_HTTP_MULTIPLEX=YES
GDAL_HTTP_VERSION=2
GDAL_BAND_BLOCK_CACHE=HASHSET

# DigitalOcean Spaces Configuration (Preferred)
# These variables are automatically mapped to AWS_* for GDAL compatibility
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
SPACES_BUCKET=salty-data
SPACES_REGION=nyc3
SPACES_CDN_URL=https://salty-data.nyc3.digitaloceanspaces.com

# AWS S3 Configuration (Alternative - for AWS S3 or if not using SPACES_*)
# Leave empty if using SPACES_* variables above
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_REGION=
# Custom S3 endpoint for S3-compatible services (e.g., DigitalOcean Spaces)
# Format: https://region.digitaloceanspaces.com (no trailing slash)
AWS_S3_ENDPOINT=