# TiTiler Server Configuration
TILER_HOST=0.0.0.0
TILER_PORT=8001
WORKERS=1
DEBUG=false

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=*

# Cache Configuration
# Using in-memory caching (Redis removed in favor of Cloudflare caching)
CACHE_TYPE=memory
CACHE_TTL=86400
CACHE_NAMESPACE=salty-tiler


# GDAL Performance Tuning
GDAL_DISABLE_READDIR_ON_OPEN=EMPTY_DIR
GDAL_CACHEMAX=512
CPL_VSIL_CURL_CACHE_SIZE=200000000
VSI_CACHE=TRUE
VSI_CACHE_SIZE=5000000
GDAL_HTTP_MERGE_CONSECUTIVE_RANGES=YES
GDAL_HTTP_MULTIPLEX=YES
GDAL_HTTP_VERSION=2
GDAL_BAND_BLOCK_CACHE=HASHSET